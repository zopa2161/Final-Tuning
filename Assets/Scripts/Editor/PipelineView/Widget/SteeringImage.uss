/* 전체 위젯 컨테이너 */
.steering-widget {
    width: 150px;
    height: 150px;
    /* 내부 요소를 중앙에 배치 */
    justify-content: center;
    align-items: center;
    /* 배경색 예시 (확인용, 실제론 투명하게) */
    /* background-color: rgba(0, 0, 0, 0.2); */
