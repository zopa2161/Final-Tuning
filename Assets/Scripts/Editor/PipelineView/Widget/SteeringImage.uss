/* 회전할 핸들 그래픽 */
.steering-wheel-graphic {
    width: 100%;  /* 부모 크기에 맞춤 */
    height: 100%;
    /* 준비한 핸들 이미지 연결 (경로 수정 필요!) */
    background-image: url("project://database/Assets/UISprite/steeringWheel.png");
    -unity-background-scale-mode: scale-to-fit; /* 비율 유지하며 맞춤 */

